<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="mario" class="com.launchcode.mario.Mario">
        <constructor-arg name="factory" ref="pyrFactory"/>
    </bean>

    <bean id="pyrFactory" class="com.launchcode.mario.PyramidFactory">
        <constructor-arg name="pyramid" ref="pyramid"/>
    </bean>

    <bean id="pyramid" class="com.launchcode.mario.Pyramid"/>

</beans>